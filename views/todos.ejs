<h2>My TODOS</h2>
<a href="/add-todos">
    <div class="btn btn-primary">Add Todo</div>
</a>
<table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tittle</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
        <% todos.forEach((todo,index) => { %>
      <tr>
            <th scope="row"> <%= index+1 %> </th>
            <td><a href="/todos/<%= todo.id %>" class="text-decoration-none"><%= todo.title %></a> </td>
            <td>
                <% if (todo.completed) { %>
                    <span class="badge bg-success">Completed</span>
                <% } else { %>
                    <span class="badge bg-danger">Not Finished Yet</span>
                <% } %>
            </td>
            <td>
                <form action="/todos/edit" method="post">
                    <input type="hidden" name="id" value="<%= todo.id %>">
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-square-fill"></i></button>
                </form>
                <form action="/todos/delete" method="post">
                    <input type="hidden" name="id" value="<%= todo.id %>">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></button>
                </form>
                
            </td>
        </tr>
        <% }) %>
      </tr>
    </tbody>
  </table>