  <body>
    <main>
      <h1>List of todos ü§∏ </h1>
      <a class="btn" href="/add-todo">Add new todo</a>
      
      <div class="grid">
        <% if(todos.length > 0) {%>
              <% for (let todo of todos) { %> 
                <article class="card todos-item">
                  <div class="card__content">
                      <h3>
                        Title: <%= todo.title %>
                      </h3>
                      <h4>
                        <% if(todo.completed) { %> 
                          Completed ‚úÖ
                        <% } else { %>
                          Not Completed ‚ùå
                        <% } %>
                      </h4>
                      <div style="display: flex;">
                        <a class="btn" style="margin-right: 15px;" href="/todos/<%= todo.id %>">Detail</a>
                        <form action="/todos/delete/<%= todo.id %>" method="POST">
                          <input class="btn" type="submit" value="Delete" />
                        </form>
                      </div>
                  </div>
                </article>
              <% } %>
          <% } else { %>
              <h2 style="display: flex; justify-content: center;align-items: center;">No Todos Found ü§å</h2>
          <% } %>
      </div>   
<%- include('./includes/end.ejs') %>
